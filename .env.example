# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_admin_id_here
CHANNEL_URL=t.me/your_channel
FEEDBACK_URL=https://your_feedback_url
SOS_URL=https://your_sos_url

# LLM Configuration
LLM_TOKEN=your_llm_token_here

# Logging
LOG_LEVEL=all

# Channels (optional)
# Format: @channel1,@channel2 or channel_id1,channel_id2
REQUIRED_CHANNELS=

# Pricing (optional)
# Base price in Telegram Stars. Default: 100
BASE_PRICE=100

# Promotion (optional)
# Text of the promotion (second part of the sentence after "действует акция:")
# If empty, the promotion line will not be shown
# Example: <b>бесплатная</b> генерация половины работы!
PROMOTION_TEXT=
